<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <plugin displayName="Twitch" homepage="https://loupedeck.com" />
    <aliases>
        <alias name="AllButtons" controls="Crop" />
        <alias name="AllEncoders" controls="Crop" />
    </aliases>

    <modes>
        <mode name="Main" />
    </modes>

    <actions>
        <group displayName="">
            <command name="CreateClip" displayName="Create Clip" description="Creates clip and displays clip url in chat."/>
            <command name="CreateMarker" displayName="Create Marker" desciption="Creates a marker in the stream."/>
            <command name="ViewerCount" description="Shows the current amount of viewers"/>
            <command name="RunCommercialList" displayName="Run Commercial" profileActionType="list;Duration (seconds):" description="Runs a commercial during your Twitch stream (Partners only)"/>
        </group>
        <group displayName="">
            <command name="ToggleEmotesOnly" displayName="Chat Emotes-Only" description="Toggles chat emotes-only mode."/>
            <command name="ToggleSubsOnly" displayName="Chat Subscribers-Only" description="Toggles chat subscribers-only mode."/>
            <command name="ClearChat" displayName="Clear Chat" description="Clears all messages in Twitch chat"/>
            <command name="ResetSettings" displayName="Reset Settings" description="Resets chat settings to default."/>
            <command name="ToggleSlowChatList" displayName="Chat Slow Mode" profileActionType="list;Duration (seconds):" description="Turns Slow Mode for Twitch Chat on/off"/>
            <command name="ToggleFollowersOnlyList" displayName="Chat Followers-Only" profileActionType="list;Duration (seconds):" description="Turns Followers-Only mode for Twitch Chat on/off"/>
        </group>
      <group displayName="SendChatMessage">
        <command name="SendChatMessage" profileActionType="text;Enter message text:" description="Sends a predefined message to your Twitch chat"/>
      </group>
        <group displayName="Chatters">
            <command name="ChattersBrowserTouchAction" hasParameter="true"/>
        </group>
    </actions>

    <layouts>
        <layout name="Main">
            <command name="CreateClip" otherControls="AllButtons"/>
            <command name="ToggleSlowChat" otherControls="AllButtons"/>
            <command name="ToggleEmotesOnly" otherControls="AllButtons"/>
            <command name="ToggleFollowersOnly" otherControls="AllButtons" />
            <command name="ToggleSubsOnly" otherControls="AllButtons"/>
            <command name="ClearChat" otherControls="AllButtons"/>
            <command name="CreateMarker" otherControls="AllButtons" />
            <command name="RunCommercial" otherControls="AllButtons" />
            <command name="ViewerCount" otherControls="AllButtons"/>
            <command name="ResetSettings" otherControls="AllButtons"/>
            <command name="SendChatMessage" displayName="AllButtons"/>
            <command name="ToggleSlowChatList" displayName="AllButtons"/>
            <command name="ToggleFollowersOnlyList" displayName="AllButtons"/>
            <command name="RunCommercialList" displayName="AllButtons"/>
        </layout>
    </layouts>

</configuration>